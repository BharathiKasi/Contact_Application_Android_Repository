<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1565c0</item>
        <item name="colorPrimaryDark">#40c4ff</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="modifyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#1565c0</item>
        <item name="colorPrimaryDark">#40c4ff</item>
        <item name="colorAccent">#1565c0</item>

    </style>
    <style name="FirstLetter">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="NameView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">#000000</item>

    </style>

    <style name="button_theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name ="android:textColor">@color/name_color</item>
        <item name ="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:onClick">readButttonInput</item>
    </style>
    <style name="detailedUserName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">25dp</item>

    </style>

</resources>
